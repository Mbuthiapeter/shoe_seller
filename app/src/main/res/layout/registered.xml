<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/uname"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/regat"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView9"
        android:textColor="#000000"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="You have Sucessfully Registered"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back to Login"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_below="@+id/regat"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Registered at"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/uname"
        android:layout_toStartOf="@+id/uname" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Your Registration Details"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>